@model TaskManagementSystem.Models.Tasks

<h2>Delete Task</h2>

<h3>Are you sure you want to delete this task?</h3>

<div>
    <h4>@Model.Name</h4>
    <p>Description: @Model.Description</p>
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "Tasks")" class="btn btn-secondary">Cancel</a>
</form>