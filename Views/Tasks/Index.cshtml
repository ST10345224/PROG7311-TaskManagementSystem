@model IEnumerable<TaskManagementSystem.Models.Tasks>

<h2>Task List</h2>

<a href="@Url.Action("Create", "Tasks")" class="btn btn-success mb-3">Create New Task</a>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Due Date</th>
            <th>Details</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            string rowClass = task.DueDate < DateTime.Now ? "table-danger" : "";
            <tr class="@rowClass">
                <td>@task.Id</td>
                <td>@task.Name</td>
                <td>@task.Description</td>
                <td>@task.DueDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>
                    <a href="@Url.Action("Details", "Tasks", new { id = task.Id })">View Details</a>
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Tasks", new { id = task.Id })">Edit</a>
                </td>
                <td>
                    <a href="@Url.Action("Delete", "Tasks", new { id = task.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Tasks")" class="btn btn-primary">Create New Task</a>